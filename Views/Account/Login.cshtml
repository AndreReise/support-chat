@model TechnicalSupport.Utils.AuthModel
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

<h2>Вход на сайт</h2>

<form asp-action="Login" asp-controller="Account" asp-anti-forgery="true">
    <div class="validation" asp-validation-summary="ModelOnly"></div>
    <div>
        <div class="form-group">
            <label asp-for="UserString">Введите Email</label><br />
            <input type="text" asp-for="UserString" />
            <span asp-validation-for="UserString" /><br />
        </div>
        <div class="form-group">
            <label asp-for="Password">Введите пароль</label><br />
            <input asp-for="Password" />
            <span asp-validation-for="Password" /><br />
        </div>
        <div class="form-group">
            <input type="submit" value="Войти" class="btn" />
        </div>
    </div>
</form>